<?xml version="1.0" encoding="UTF-8"?>

<!-- default directory 설정 -->

<decorators defaultdir="/WEB-INF/views">

	<!-- sample -->

	<decorator name="home" page="layout/layout.jsp">
		<pattern>/</pattern>
	</decorator>
	<decorator name="header" page="layout/header.jsp"/>
	<decorator name="leftmenu" page="layout/leftmenu.jsp"/>
	
